# Use Xft?
use_xft yes
xftfont nu:size=8

update_interval 0.5
total_run_times 0

own_window  yes
own_window_transparent no
own_window_type desktop
own_window_hints undecorate,sticky,skip_taskbar,skip_pager 


double_buffer yes
draw_shades no
draw_outline no
draw_borders yes
stippled_borders 0
border_inner_margin 5
border_width 1

default_color 303030
own_window_colour 262524
alignment top_left
gap_x 825
gap_y 535
minimum_size 150 100
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
use_spacer right

TEXT
${color 5c5c5c}Up:${alignr}${upspeed wlp5s0}KB/s
${upspeedgraph wlp5s0 20,85 }
Total: ${totalup wlp5s0}

Down:${alignr}${downspeed wlp5s0}KB/s
${downspeedgraph wlp5s0 20,85 }
Total: ${totaldown wlp5s0}
